{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "description": "Данные об организации",
  "properties": {
    "fullname": {
      "type": "string",
      "description": "Название организации"
    },
    "inn": {
      "type": "string",
      "description": "ИНН организации"
    },
    "kpp": {
      "type": "string",
      "description": "КПП организации"
    },
    "ogrn": {
      "type": "string",
      "description": "ОГРН организации"
    },
    "okpo": {
      "type": "string",
      "description": "ОКПО организации"
    },
    "address": {
      "type": "string",
      "description": "Адрес организации"
    },
    "isResident": {
      "type": "boolean",
      "description": "Признак резидента"
    }
  },
  "required": [
    "fullname",
    "inn",
    "ogrn",
    "isResident"
  ],
  "additionalProperties": false
}