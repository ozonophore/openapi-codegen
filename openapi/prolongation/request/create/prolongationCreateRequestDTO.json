{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Request for prolongation creation",
  "description": "Запрос на создание пролонгации",
  "type": "object",
  "properties": {
    "senderSystem": {
      "type": "string",
      "description": "Наименование системы-отправителя"
    },
    "clientEpkId": {
      "type": "string",
      "description": "ID клиента в ЕПК"
    },
    "operationGUID": {
      "type": "string",
      "description": "GUID   операции"
    },
    "depositGUID": {
      "type": "string",
      "description": "GUID продукта"
    },
    "digitalId": {
      "type": "string",
      "description": "Идентификатор договора ДБО в фабрике Digital"
    },
    "account": {
      "$ref": "../../common_request/accountDTO.json",
      "description": "Счет списания"
    },
    "accountReturn": {
      "$ref": "../../common_request/accountDTO.json",
      "description": "Счет возврата"
    },
    "specialCondition": {
      "$ref": "../../common_request/specialConditionDTO.json",
      "description": "Признак спец. условий (программа лояльности)"
    },
    "depositAmount": {
      "$ref": "../../common_request/depositAmountDTO.json",
      "description": "Атрибуты продукта"
    },
    "docData": {
      "$ref": "../../common_request/docDataDTO.json",
      "description": "Данные по заявлению"
    },
    "product": {
      "$ref": "../../common_request/productDTO.json"
    },
    "depositTermDate": {
      "type": "string",
      "format": "date",
      "description": "Дата списания средств"
    },
    "isEqualAccounts": {
      "type": "boolean",
      "description": "Признак совпадения счетов возврата и списания"
    },
    "paymentPeriodCode": {
      "type": "string",
      "description": "Периодичность выплаты"
    },
    "replenishmentType": {
      "type": "string",
      "description": "Тип зачисления"
    },
    "rate": {
      "type": "number",
      "description": "Дата создания документа"
    },
    "term": {
      "type": "integer",
      "description": "Срок размещения (срок вклада в днях)"
    },
    "isReplenished": {
      "type": "boolean",
      "description": "Признак пополняемости"
    },
    "isRecallable": {
      "type": "boolean",
      "description": "Признак отзываемости"
    }
  },
  "required": [
    "depositGUID",
    "account",
    "accountReturn",
    "depositAmount",
    "depositTermDate",
    "docData",
    "product",
    "specialCondition",
    "term",
    "isEqualAccounts",
    "replenishmentType",
    "rate",
    "isReplenished",
    "isRecallable"
  ],
  "additionalProperties": false
}