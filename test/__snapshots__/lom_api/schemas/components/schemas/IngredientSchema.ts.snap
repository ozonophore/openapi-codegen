import Ajv from 'ajv';
import addFormats from 'ajv-formats';

const ajv = new Ajv({ allErrors: true });
addFormats(ajv);

export const IIngredientSchema = {
    type: 'object',
    properties: {
        id: {
            type: 'string',
            format: 'uuid',
        },
        name: {
            type: 'string',
        },
        quantity: {
            type: 'number',
        },
    },
    required: ['id', 'name', 'quantity'],
    additionalProperties: false,
};

export type IIngredient = any; // JSON Schema doesn't provide type inference

export function validateIIngredient(
    data: unknown,
): { valid: true; data: IIngredient } | { valid: false; errors: Ajv.ErrorObject[] } {
    const validate = ajv.compile(IIngredientSchema);
    const valid = validate(data);
    if (valid) {
        return { valid: true, data: data as IIngredient };
    }
    return { valid: false, errors: validate.errors || [] };
}

export function validateIIngredientSync(data: unknown): IIngredient {
    const validate = ajv.compile(IIngredientSchema);
    const valid = validate(data);
    if (!valid) {
        throw new Error(ajv.errorsText(validate.errors));
    }
    return data as IIngredient;
}
