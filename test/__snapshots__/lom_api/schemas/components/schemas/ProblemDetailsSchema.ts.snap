import Ajv, { ErrorObject } from 'ajv';
import addFormats from 'ajv-formats';

const ajv = new Ajv({ allErrors: true });
addFormats(ajv);

export const IProblemDetailsSchema = {
    type: 'object',
    properties: {
        title: {
            type: 'string',
        },
        detail: {
            type: 'string',
        },
        status: {
            type: 'number',
        },
    },
    required: ['title', 'status'],
    additionalProperties: false,
};

export type IProblemDetails = any; // JSON Schema doesn't provide type inference

export function validateIProblemDetails(
    data: unknown,
): { valid: true; data: IProblemDetails } | { valid: false; errors: ErrorObject[] } {
    const validate = ajv.compile(IProblemDetailsSchema);
    const valid = validate(data);
    if (valid) {
        return { valid: true, data: data as IProblemDetails };
    }
    return { valid: false, errors: validate.errors || [] };
}

export function validateIProblemDetailsSync(data: unknown): IProblemDetails {
    const validate = ajv.compile(IProblemDetailsSchema);
    const valid = validate(data);
    if (!valid) {
        throw new Error(ajv.errorsText(validate.errors));
    }
    return data as IProblemDetails;
}
