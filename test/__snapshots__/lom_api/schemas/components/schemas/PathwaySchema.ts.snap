import Ajv from 'ajv';
import addFormats from 'ajv-formats';

const ajv = new Ajv({ allErrors: true });
addFormats(ajv);

export const IPathwaySchema = {
    type: 'object',
    properties: {
        id: {
            type: 'string',
            format: 'uuid',
        },
        name: {
            type: 'string',
        },
        description: {
            type: 'string',
        },
    },
    required: ['id', 'name', 'description'],
    additionalProperties: false,
};

export type IPathway = any; // JSON Schema doesn't provide type inference

export function validateIPathway(
    data: unknown,
): { valid: true; data: IPathway } | { valid: false; errors: Ajv.ErrorObject[] } {
    const validate = ajv.compile(IPathwaySchema);
    const valid = validate(data);
    if (valid) {
        return { valid: true, data: data as IPathway };
    }
    return { valid: false, errors: validate.errors || [] };
}

export function validateIPathwaySync(data: unknown): IPathway {
    const validate = ajv.compile(IPathwaySchema);
    const valid = validate(data);
    if (!valid) {
        throw new Error(ajv.errorsText(validate.errors));
    }
    return data as IPathway;
}
