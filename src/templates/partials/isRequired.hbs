{{~#if @root.useOptions~}}
    {{~#if default~}}
        ?  {{!-- Если есть default, всегда делаем необязательным --}}
    {{~else~}}
        {{~#if isRequired}}{{else}}?{{/if~}}
    {{~/if~}}
{{~else~}}
    {{~#if @root.strictRequired~}}
        {{~#if default~}}
            ?  {{!-- Если есть default, всегда делаем необязательным --}}
        {{~else~}}
            {{~#unless isRequired}}?{{/unless~}}
        {{~/if~}}
    {{~else~}}
        ?  {{!-- В совместимом режиме всегда необязательный --}}
    {{~/if~}}
{{~/if~}}