{{>header}}

{{#if imports}}
{{#each imports}}
import type { {{{name}}}{{#if alias}} as {{{alias}}}{{/if}} } from '{{{@root.outputModels}}}{{{path}}}';
{{/each}}
{{/if}}

// Унифицированный импорт запросов
import { OpenAPI, createRequest } from '{{{@root.outputCore}}}request';

{{#each operations}}
/**
{{#if deprecated}}
 * @deprecated
{{/if}}
{{#if summary}}
 * {{summary}}
{{/if}}
{{#if description}}
 * {{description}}
{{/if}}
{{#each parameters}}
 * @param {{name}} {{description}}
{{/each}}
{{#each results}}
 * @returns {{type}} {{description}}
{{/each}}
 * @throws ApiError
 */
export const {{{name}}} = ({{>parameters}}): Promise<{{>result}}> => {
    const options: ApiRequestOptions = {
        {{>serviceOption}}
    };
    
    return createRequest(options, OpenAPI);
};
{{/each}}

{{! Альтернативный вариант с классом (опционально) }}
export class {{{name}}}Service {
    {{#each operations}}
    static {{{name}}} = {{{name}}};
    {{/each}}
}