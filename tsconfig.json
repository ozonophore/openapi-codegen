{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "ES2022",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": ["es6", "es2017", "dom"],
        "types": ["node"],
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "./dist",
        "sourceMap": false,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strict": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true
    },

    "files": [
        "./src/typings/hbs.d.ts",
        "./src/typings/camelcase.d.ts",
        "./src/typings/mkdirp.d.ts",
        "./src/typings/rimraf.d.ts"
    ],

    "include": [
        "./src/**/*.ts"
    ],

    "exclude": [
        "node_modules",
        "**/__mocks__",
        "**/__tests__",
        "**/*.spec.ts"
    ]
}

